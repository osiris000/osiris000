#!/bin/bash


COMANDO="/var/www/osiris000/bin/osiristv"

if command -v xterm &> /dev/null
then
    echo "xterm está instalado"
    # Ejecuta el comando en una nueva ventana de xterm y deja la terminal abierta

     nohup xterm -e "bash -c \"$COMANDO; exec bash\"" > /dev/null 2>&1 &
#    xterm -e "bash -c \"$COMANDO; exec bash\""
else
    echo "xterm no está instalado"
    # Aquí pones el comando que deseas ejecutar si xterm no está instalado
    echo "Por favor instala xterm para continuar."
exec bash /var/www/osiris000/bin/osiristv

fi

#exec ffmpeg -y -re -f x11grab -video_size 720x460 -framerate 10 -i :0.0+180,180 -f alsa -ac 2 -i pulse  -preset ultrafast -s 860x540 -b:a 128k -b:v 5000k -bufsize 15000k -c:v h264 -c:a aac -bsf:v h264_mp4toannexb -bsf:a aac_adtstoasc -movflags +faststart -pix_fmt yuv420p -g 2 -crf 18 -minrate 728k -r 15 -maxrate 6000k -minrate 860k -f flv rtmp://a.rtmp.youtube.com/live2/g8pm-sau2-va7c-tyg5-1ppy 
exit 1
